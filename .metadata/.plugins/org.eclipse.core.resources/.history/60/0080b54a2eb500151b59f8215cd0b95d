package com.ilad.circularbuffer;

public class Consumer implements Runnable {
	private ProtectedCircularBuffer<Integer> circularBuffer;
	private Integer[] consumer;

	// Constructor
	public Consumer(ProtectedCircularBuffer<Integer> circularBuffer_, Integer[] consumer_) {
		circularBuffer = circularBuffer_;
		consumer = consumer_;
	}

	@Override
	public void run() {
		circularBuffer.read(consumer, consumer.length);
		try {
			Thread.sleep(5000);
		} catch (InterruptedException e) {
			e.printStackTrace();
		}
	}
}
