package com.ilad.datefinder;

import java.util.Map;

public class DateFinder {
	private int m_year;
	private Month m_month;
	private int m_day;

	static private Map<Integer, Integer> m_gregYearValueMap;
	private final static int[][] daysInMonth = new int[2][12];
	private final static int[][] codeOfMonth = new int[2][12];

	public DateFinder(int year_, Month month_, int day_) {
		m_year = year_;
		m_month = month_;
		m_day = day_;
	}

	public boolean isLeapYear() {
		return true; // to be continue
	}

	public boolean isValidDate() {
		return true; // to be continue
	}

	public Day findDay() {
		return Day.SATURDAY; // to be continue
	}

	public void setDate(int year_, Month month_, int day_) {
		m_year = year_;
		m_month = month_;
		m_day = day_;
	}

	public enum Day {
		SUNDAY(1), MONDAY(2), TUESDAY(3), WEDNESDAY(4), THURSDAY(5), FRIDAY(6), SATURDAY(0);
		private int value;

		private Day(int value_) {
			value = value_;
		}
		
		public int getValue() {
			return value;
		}
	};

	public enum Month {
		JANUARY(1), FEBRUARY(2), MARCH(3), APRIL(4), MAY(5), JUNE(6), JULY(7), AUGUST(8), SEPTEMBER(9), OCTOBER(
				10), NOVEMBER(11), DECEMBER(12);

		private int value;

		private Month(int value_) {
			value = value_;
		}
		
		public int getValue() {
			return value;
		}
	};
}
